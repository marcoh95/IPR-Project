    </nav>
    <div class='container'>
        <h1 class='mb-4'>Artikel Bearbeiten</h1>
        <% articles.forEach(article => { %>

            <form action="/articles/<%= article.id %> ?_method=PUT" method="POST">
                <div class='form-group'>
                    <lable for='title'>Titel:</lable>
                    <input type="text" name='title' id='title' class='form-control' value="<%= article.title %> ">
                    <lable for='description'>Beschreibung:</lable>
                    <textarea name='description' id='description' class='form-control' style="height: 100px;" ><%= article.description %></textarea>
                    <lable for='content'>Artikel:</lable>
                    <textarea name='content' id='content' class='form-control' style="height: 200px;" ><%= article.content %></textarea>
                </div>
                <button type='submit' class='btn btn-success'>Bearbeiten</button>
                <a href="/member" class='btn btn-secondary'>Abbrechen</a>
            </form>

        <% }) %>
    </div>
